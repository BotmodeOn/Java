package com.company;

public class Main {

    public static void main(String[] args) {
	String [] wordListOne = {"круглосуточный","трех-звуздный","взаимный","умный"};
	String [] wordListTwo = {"уполномлченный","центральный","фирменный","сетевой","совместный"};
	String [] wordListThree = {"процесс","выход из положения","портал","талант","подход","период времени","образец","обзор"};

	int oneLength = wordListOne.length;
	int twoLength = wordListTwo.length;
	int threeLength = wordListThree.length;

	int random1 = (int) (Math.random() * oneLength);
	int random2 = (int) (Math.random() * twoLength);
	int ramdom3 = (int) (Math.random() * threeLength);

	String phrase = wordListOne[random1] + " " + wordListTwo[random2] + " " + wordListThree[ramdom3];

	System.out.println("Все что нужно нам, - это "+ phrase);

    }
}
